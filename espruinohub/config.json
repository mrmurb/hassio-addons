{
    "name": "Espruino Hub",
    "version": "0.1.0",
    "slug": "espruino_hub",
    "description": "A BLE to MQTT bridge",
    "startup": "before",
    "boot": "auto",
    "arch": ["armhf", "armv7"],
    "options": {
      "known_devices": {
      },
      "only_known_devices": false,
      "http_port": 1888
    },
    "schema": {
      "known_devices": "str",
      "only_known_devices": "bool",
      "http_port": "int",
      "mqtt_host": "str",
      "mqtt_options": {
        "username": "str",
        "password": "str"
      }
    },
    "host_network": true,
    "webui": "http://[HOST]:[PORT:1888]/"
  }
  